{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "esnext",
		"moduleResolution": "node",
		"types": ["vitest/globals"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["vitest.config.ts", "src/**/**.ts"]
}
